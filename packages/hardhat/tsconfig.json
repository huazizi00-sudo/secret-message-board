{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "./contracts/**/*",
    "./deploy/**/*",
    "./test/**/*",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

